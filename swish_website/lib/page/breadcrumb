[%- 
    mylist = [];  # to lazy to add a map vmethod
    FOR item = page.trail;
        SET escaped = item.name | html;
        SET tooltip = " title=\"$item.tooltip\"" IF item.tooltip;

        IF item.here;
            mylist.push( escaped  );
        ELSE;
           mylist.push( "<a href=\"$item.url\" $tooltip>$escaped</a>" );
        END;
    END;
    mylist.join(' &#187 ');
%]
